{
  "info": {
    "name": "Secure Blog API",
    "description": "A comprehensive RESTful API for a blog platform with JWT authentication, role-based access control, and security features.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "description": "Base URL for the API"
    },
    {
      "key": "token",
      "value": "",
      "description": "JWT token for authenticated requests"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "description": "Register a new user with email and password"
          },
          "response": []
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.globals.set('token', jsonData.data.token);",
                  "  pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login with email and password to receive JWT token"
          },
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "me"
              ]
            },
            "description": "Get current authenticated user profile"
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "profile"
              ]
            },
            "description": "Update user profile information"
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"SecurePass123\",\n  \"newPassword\": \"NewSecurePass456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/change-password",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "change-password"
              ]
            },
            "description": "Change user password"
          },
          "response": []
        }
      ],
      "description": "Authentication related endpoints"
    },
    {
      "name": "Blog Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts?page=1&limit=10",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number for pagination"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of posts per page"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search query",
                  "disabled": true
                },
                {
                  "key": "tag",
                  "value": "",
                  "description": "Filter by tag",
                  "disabled": true
                },
                {
                  "key": "author",
                  "value": "",
                  "description": "Filter by author ID",
                  "disabled": true
                }
              ]
            },
            "description": "Get all published posts with optional pagination and search"
          },
          "response": []
        },
        {
          "name": "Get My Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/my?status=published",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "my"
              ],
              "query": [
                {
                  "key": "status",
                  "value": "published",
                  "description": "Filter by post status (draft, published, archived)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Posts per page",
                  "disabled": true
                }
              ]
            },
            "description": "Get current user's posts"
          },
          "response": []
        },
        {
          "name": "Get Single Post",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/:postId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                ":postId"
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "",
                  "description": "Post ID"
                }
              ]
            },
            "description": "Get a single post by ID"
          },
          "response": []
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"body\": \"This is the content of my first blog post. It contains valuable information about the topic I'm writing about. The post should be engaging and informative for readers.\",\n  \"status\": \"published\",\n  \"tags\": [\"technology\", \"nodejs\", \"api\", \"tutorial\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts"
              ]
            },
            "description": "Create a new blog post"
          },
          "response": []
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Blog Post Title\",\n  \"body\": \"This is the updated content of my blog post. I've made some improvements and added more valuable information.\",\n  \"status\": \"published\",\n  \"tags\": [\"technology\", \"nodejs\", \"api\", \"tutorial\", \"updated\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/:postId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                ":postId"
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "",
                  "description": "Post ID to update"
                }
              ]
            },
            "description": "Update an existing post (owner or admin only)"
          },
          "response": []
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/:postId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                ":postId"
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "",
                  "description": "Post ID to delete"
                }
              ]
            },
            "description": "Delete a post (owner or admin only)"
          },
          "response": []
        },
        {
          "name": "Get Popular Tags",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/tags/popular?limit=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "tags",
                "popular"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of tags to return"
                }
              ]
            },
            "description": "Get popular tags with their usage count"
          },
          "response": []
        }
      ],
      "description": "Blog post related endpoints"
    },
